 body {
 	font-family: 'Lato', sans-serif;
 	font-size: 12px;
 	background: #FFFFFF !important;
 }


 .db { display: block; }
 .left { float: left; }
 .mr30 { margin-right: 30px; }
 .mt0 { margin-top: 0 !important; }
 .mb40 { margin-bottom: 40px; }

 .w310 { width: 310px !important; }

/* Admin Site
================================================ */
.left-bar {
    background: #4B4B4B;
    width: 285px;
    float: left;
    padding: 25px 0 0 90px;
    height: 100%;
}
    .left-bar nav a {
        color: #fff;
        display: block;
        position: relative;
        font-size: 11px;
        padding: 15px 0 15px 35px;
        text-transform: uppercase;
    }
    	.left-bar nav a span {
    		left: 1px;
		    margin-right: 15px;
		    position: absolute;
		    top: 14px;
    	}

        .left-bar nav a:hover,
        .left-bar nav a.active { color: #C5E031; text-decoration: none; }

        .left-bar nav a.active .icn.dashboard { background-position: -49px -452px; }
        .left-bar nav a.active .icn.users { background-position: -49px -478px; }
        .left-bar nav a.active .icn.contestad { background-position: -49px -507px; }
        .left-bar nav a.active .icn.donations { background-position: -49px -527px; }
        .left-bar nav a.active .icn.admins { background-position: -49px -549px; }
        .left-bar nav a.active .icn.settings { background-position: -49px -575px; }
        .left-bar nav a.active .icn.logout { background-position: -49px -601px; }

		.user-admin-panel { margin-bottom: 20px; }
        .user-admin-panel .img-profile {
        	border-radius: 50px;
		    float: left;
		    height: 32px;
		    margin-right: 10px;
		    overflow: hidden;
		    width: 32px;
        }
        	.user-admin-panel .img-profile img {
        		display: block;
        		width: 100%;
        		height: 100%;
        	}
        	.user-admin-panel span {
        		color: #fff;
			    line-height: 33px;
			    text-transform: uppercase;
        	}


.content-side {
    height:100%;
    overflow: scroll;
    padding: 35px;
    float: left;
}
	.content-side .data-zone {
		padding: 0;
		width: 505px;
	}
		.content-side .data-zone input[type="submit"] {
			margin-right: 15px;
    		width: 110px;
		}
    .content-side span.title {
        display: block;
        font-size: 13px;
        font-weight: 400;
        color: #595959;
        text-transform: uppercase;
        margin: 40px 0;
		line-height: 39px;
    }

    .content-side .stats-admin {
        background: #C5E031;
        overflow: hidden;
        padding: 30px 0;
    }
        .stats-div { width: 630px; margin: 0 auto; overflow: hidden; }
            .stats-div > div {
                float: left;
                width: 155px;
            }
                .stats-div > div:last-child { width: 160px; }
                .stats-div > div span { color: #ffffff; display: block; }
                .stats-div > div span:first-of-type { font-size: 26px; }

    /* Donation Activity */
    .activity:after {
        content: "\0020";
        display: block;
        height: 0;
        clear: both;
        visibility: hidden;
    }
        .container-scroller {
            max-height: 319px;
            overflow-y: scroll;
        }
        .container-scroller+div.actions { margin-top:30px;}
    .activity .list {
        border: 1px solid #E3E3E3;
    }
        .activity .list .list-thumb {
            background: #ffffff;
            border-bottom: 1px solid #E3E3E3;
            padding: 10px;
            overflow: hidden;
        }
            .activity .list .list-thumb:last-child { border-bottom: none; }
            .activity .list .list-thumb:nth-child(2n) { background: #F9FFD8; }

        .activity .list .list-thumb > div { float: left; }
        .activity .list .list-thumb > div > span {
            color: #797879;
            font-size: 13px;
            line-height: 32px;
            margin-left: 10px;
            text-transform: capitalize;
        }

		.actions-users a {
			color: #797879;
            font-size: 13px;
            text-transform: uppercase;
            line-height: 32px;
            margin-right: 10px;
		}
			.actions-users a:hover { color: #797879; }

        .activity .list .list-thumb > div+span {
            float: right;
            line-height: 31px;
            text-align: right;
            font-size: 13px;
            margin-right: 15px;
            color: #A4A4A4;
            width: 20%;
        }
        .activity .list .list-thumb > div .thumb-image {
            overflow: hidden;
            background: #cccccc;
            margin-right: 10px;
            width: 32px;
            float: left;
            height: 32px;
            border-radius: 50px;
        }
            .activity .list .list-thumb > div .thumb-image img {
                display: block;
                height: auto;
                width: auto;
            }
            .activity .list .list-thumb > div .thumb-image img.icnuploadimg {
            	height: auto;
			    margin-left: 7px;
			    margin-top: 6px;
			    width: 54%;
            }

        .activity .actions-users {
        	float: right !important;
        	line-height: 31px;
        	margin-right: 30px;
        }
        	.activity .actions-users span {
        		color: #9b9b9b !important;
			    font-size: 12px !important;
			    text-transform: uppercase;
			    cursor: pointer;
        	}
        	.right { float: right !important; margin-right: 20px; }

        	.activity .list-thumb .cloud { position: relative; top: 2px; }
        	.activity .list-thumb .cloud+span { margin-left: 3px !important; }

        	.activity .list-thumb .card { position: relative; top: 2px; }

        	.activity .actions-users a {
        		text-transform: uppercase;
        		color: #9b9b9b;
        	}

            .container-scroller a {
                color: #797879;
                font-weight: bold;
            }

            
            .user-time { float: left; }
            .user-time span { display: block; line-height: 16px; }
            .user-time span:first-of-type {
                color: #797879;
                color: rgb(121, 120, 121);
                font-size: 13px;
            }
            .user-time span:last-of-type {
                color: rgba(164, 164, 164, 1);
            }



    /* Active Contests */
    .active-contest .list { border: 1px solid #E3E3E3; margin-bottom: 40px; }
    .active-contest .list .list-thumb {
        border-bottom: 1px solid #E3E3E3;
        overflow: hidden;
        position: relative;
    }
        .active-contest .list .list-thumb:nth-child(2n) { background: #F9FFD8; }
        .active-contest .list .list-thumb:last-child { border-bottom: none; }
        .active-contest .list .list-thumb .thumb-image {
            background: #ccc;
            float: left;
            overflow: hidden;
            width: 99px;
            height: 99px;
        }
            .active-contest .list .list-thumb .thumb-image img {
                display: block;
                width: 100%;
                height: 100%;
            }
        .active-contest .list .list-thumb .text {
            float: left;
            margin: 22px 0 22px 20px;
        }
            .active-contest .list .list-thumb .text a {
                font-size: 15px;
                display: block;
                line-height: 30px;
                color: #797879;
                text-transform: uppercase;
            }
                .active-contest .list .list-thumb .text span a{
                    display: inline;
                    margin-left: 5px;
                    text-transform: none;
                }
            .active-contest .list .list-thumb .text span:last-of-type {
                color: #AFA4A4;
                font-size: 13px;
            }

            .icn-type {
            	float: right;
			    margin-right: 30px;
			    padding: 28px 0;
            }
            	.imagetype { padding: 25px 0; }
            	.texttype { padding: 25px 0; }
            	.texttype span { margin-right: 14px; }

        .pause-state {
        	background: rgba(0, 0, 0, 0.7);
		    bottom: 0;
		    display: table;
		    height: 94px;
		    left: 0;
		    text-align: center;
		    position: absolute;
		    right: 0;
		    top: 0;
		    width: 100%;
        }
        	.showing { display: table; }
        	.pause-state > div {
        		display: table-cell;
			    margin: 0 auto;
			    vertical-align: middle;
        	}
        		.pause-state > div a {
        			color: #FFFFFF;
        			text-transform: uppercase;
        			cursor: pointer;
        			margin-right: 20px;
        		}


            .active-contest .list .paused {
                background: #4b4b4b !important;
            }
                .active-contest .list .paused .text a,
                .active-contest .list .paused .text span { color: #ffffff !important; }

                .active-contest .list .paused .actions-users a { color: #ffffff; }

                .list .paused span.audioicon { background-position: -52px -849px; }
                .list .paused span.imageicon { background-position: -52px -931px; }
                .list .paused span.captionicon { background-position: -52px -893px; }
                .list .paused span.texticon { background-position: -52px -980px; }

    /* User Activity */
    .user-activity {
        display: block;
        overflow: hidden;
    }
        .user-activity > div.users { float: right !important; }
    .user-activity > div:not(.actions) {
        width: 48.5%;
        float: left;
    }

    	.user-activity > div:last-of-type { float: right; }
        .activity div.actions { width: 100%; margin-top: 40px; }

       .users-page .list-thumb > div+span { color: #E3E3E3 !important; }


    /* Filter */

    div.filters-head .filter-menu-left .bootstrap-select{ width: 200px !important; }

    /* Header Contest Show */

    .header-contest-show {
		background: url(<%= asset_path 'bg/bg-contest-admin.png' %>);
		background-size: cover;
		height: 222px;
		min-height: 222px;
		padding-bottom: 30px;
	    padding-left: 60px;
        position: relative;
	    padding-top: 30px;
		display: table;
		width: 100%;
    }
    .overlaycontest{
        background: none repeat scroll 0 0 rgba(0, 0, 0, 0.3);
        height: 100%;
        left: 0;
        position: absolute;
        top: 0;
        width: 100%;
    }
        .head-contest {
            overflow: hidden;
            min-height: 222px;
            position: relative;
        }
        .header-contest-show .bg { position: absolute; top: 0; left: 0; right: 0; bottom: 0; }
        .header-contest-show .bg img { width: 100%; height: auto; }
    	.header-contest-show span { color: #ffffff; }

    	.header-contest-show .left-info {
            color: #FFF;
    		display: table-cell;
    		vertical-align: middle;
            position: relative;
            z-index: 2;
    		width: 70%;
    	}
	    	.header-contest-show .left-info span:first-of-type {
	    		display: block;
			    font-size: 34px;
			    margin-bottom: 10px;
	    	}
	    	.header-contest-show .left-info p {
	    		color: #FFFFFF;
	    		font-size: 13px;
	    		margin: 0;
	    		line-height: 24px;
	    	}

	    .header-contest-show .right-info {
	    	float: right;
	    	margin-top: 17px;
	    	margin-left: 53px;
            position: relative;
            z-index: 2;
	    	width: 300px;
	    }
	    	.header-contest-show .right-info span { font-size: 18px; }
	    	.header-contest-show .right-info div { margin-bottom: 20px; }
	    	.header-contest-show .right-info div:last-child { margin: 0; }
	    	.header-contest-show .right-info div span:first-of-type { margin-right: 15px; position: relative; top: 5px; }

    /* Search Top Admin Site */
    .search {
    	overflow: hidden;
    	float: right;
    }
    	.search fieldset { position: relative; }
    	.search input {
    		border: 1px solid #ccc;
			border-radius: 50px;
			height: 35px;
			padding: 0 15px 0 45px;
			width: 270px;
    	}
    		.search span.search {
    			left: 18px;
			    position: absolute;
			    top: 9px;
    		}
    	.top-admin-content { overflow: hidden; margin-bottom: 40px; }
    	.top-admin-content > span { float: left; line-height: 35px; margin: 0 !important; }

    /* Actions COlor */
    .actions-users a { display: none; }
    .list-thumb:hover .actions-users a { display: inline-block; }
    .list-thumb:hover .actions-users a.resume-link { display: none; }

    .paused .actions-users a.pause-link { display: none; }
    .paused:hover .actions-users a.resume-link { display: inline-block !important; }

    /* Contest Admin */
    .contest-admin .actions-users {
    	float: right;
    	margin: 30px 30px 0 0;
    }

.emptylist span {
    font-size: 20px;
    color: #BEBEBE;
    line-height: 24px;
}

#caption-image-field { display: none; }

.btn-paused { background: #4b4b4b }
  .btn-paused:hover {
        color: #A4BC28;
        text-decoration: none;
        background: #4b4b4b;
        transition: background 0.2s linear;
            -moz-transition: all 0.2s linear;
            -webkit-transition: all 0.2s linear;
            -o-transition: all 0.2s linear;
    }

.active-contest .list .list-thumb .text a.winner-entry { color: #c5e031; }

.data-zone div.actions a { margin-top: 10px; }
