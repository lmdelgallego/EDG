<span class="title mt0">Invite Admin</span>

<div class="data-zone">
  <%= form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => {:method => :post} do |f| %>
    <%= devise_error_messages! %>

    <% resource.class.invite_key_fields.each do |field| -%>
      <div class="field">
        <%= f.label field %><br />
        <%= f.text_field field %>
      </div>
    <% end -%>
    <div class="actions">
      <%= f.submit "Invite" %>
      <a href="<%= admin_admins_path %>" class="canceladmin btn btn-bordergrey">Cancel</a>
    </div>
  <% end %>
</div>

