<div class="form-new-contest">
<%= form_for [:admin, @plan] do |f| %>
  <% if @plan.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@plan.errors.count, "error") %> prohibited this plan from being saved:</h2>

      <ul>
      <% @plan.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <% if @plan.name != 'Free'%>
  <div class="field">
    <%= f.label :price, "Monthly price" %><br>
    <%= f.text_field :price, :class => "makereward", data: { a_sign: "$", a_dec: ".", a_sep: ","} %>
  </div>
  <div class="field">
    <%= f.label :anual_price, "Yearly price" %><br>
    <%= f.text_field :anual_price, :class => "makereward", data: { a_sign: "$", a_dec: ".", a_sep: ","} %>
  </div>
  <% end %>

  <div class="field">
    <%= f.label :number_of_entries %><br>
    <%= f.number_field :number_of_entries,  min: 1%>
  </div>

  <div class="actions">
    <%= f.submit %>
    <a href="<%= admin_plans_path %>" class="canceladmin btn btn-bordergrey">Cancel</a>
  </div>
<% end %>
</div>
