<header>
      <div id="searchHeader" class="col-md-12 col-xs-12">
        <div class="container">
          <div class="row">
            <div class="col-md-3 push-left">
              <%= form_tag search_path, :method => 'get', id: 'search-contest-form' do %>
                <div class="input-group">
                  <%= text_field_tag :search, params[:search], class: "form-control", placeholder: 'Search' %>
                  <span class="input-group-btn">
                    <button class="btn btn-default" type="button" id="search-contest-button">
                      <i class="fa fa-search"></i>
                    </button>
                  </span>
                </div>
              <% end %>
            </div>
            <div class="col-md-4 col-md-offset-5 text-right hidden-xs">
            <div class="form-group">
                <% if current_user %>
                    <ul class="list-inline">
                      <li class="dropdown">
                        <a class="dropdown-toggle disable" data-toggle="dropdown"><%= current_user.username.humanize if current_user.username.present? %><span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="<%= user_path(current_user) %>">My profile</a></li>
                            <li><a href="<%= edit_user_registration_path %>">Settings</a></li>
                            <li role="separator" class="divider"></li>
                            <li>
                                <%= link_to 'Logout', destroy_user_session_path, method: :delete %>
                            </li>
                        </ul>
                      </li>
                    </ul>
                <% else %>
                    <ul class="signupLink list-inline">
                      <li><a href="/users/sign_up">SIGN UP</a></li>
                      <li><a href="/users/sign_in">LOGIN</a></li>
                    </ul>
                <% end %>

            </div>
          </div>
          </div>
        </div>
      </div>
      <div id="headerMenu" class="col-md-12 col-xs-12">
        <div class="row">
          <nav class="navbar navbar-default" role="navigation">
            <div class="container">
              <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                  <span class="sr-only">Toggle navigation</span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                </button>
                <span class="navbar-brand visible-xs" >
                  <%= image_tag "new_front/logo2x.png" %>
                  <span class="hidden-xs">Contagious Ideas</span>
                </span>
              </div>
              <div class="navMenu col-md-12 col-xs-12">
                <div class="row">
                  <div class="collapse navbar-collapse col-md-12">

                    <ul class="nav navbar-nav col-md-4 toLeft">
                        <li class="<%= 'active' if params[:action] == 'home' %>"><a href="<%= root_path %>">Home</a></li>
                        <li class="<%= 'active' if params[:action] == 'about' %>"><a href="<%= about_path %>">About</a></li>
                    </ul>
                    <ul class="nav navbar-nav col-md-4 hidden-xs">
                      <a class="logo-link" >
                        <%= image_tag "new_front/logo2x.png" %>
                        <p class="hidden-xs">Contagious Ideas</p>
                      </a>
                    </ul>

                    <ul class="nav navbar-nav col-md-4 last">
                        <li class="<%= 'active' if params[:action] == 'help' %>"><a href="<%= help_path %>">Help</a></li>
                        <li class="visible-xs"><a href="/users/sign_in">login</a></li>
                        <li class="<%= 'active' if params[:action] == 'contact_us' %>"><a href="<%= contact_us_path %>">Contact</a></li>

                    </ul>
                  </div>
                </div>
              </div>
            </div>
          </nav>
        </div>
      </div>
  </header>
