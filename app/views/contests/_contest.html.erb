<section class="postContest <%= column_class if column_class %> col-xs-12">
  <div class="col-lg-12">
    <div class="row">
      <% if contest.premium %>
        <div class="catContest">Premium</div>
      <% else %>
        <div class="catContest">Free</div>
      <% end %>
      <% if contest_status(contest) == "Closed" %>
        <div class="finishContest"><i class="fa fa-trophy"></i> PENDING FOR A WINNER</div>
      <% end %>
      <!-- <div class="tofinishContest"><i class="fa fa-clock-o"></i></div> -->
      <a href="<%= contest_path(contest) %>">
        <div class="imgContest" style="background-image: url(<%= contest.cover_photo.blank? ? '/assets/misc/8.png' : contest.cover_photo.url(:mini) %>);">
        </div>
      </a>
    </div>
  </div>
  <a href="<%= contest_path(contest) %>">
    <div class="title col-lg-12">
        <h3><%= contest.name %></h3>
        <small><%= contest.categories.first.name %></small>
    </div>
  </a>
  <div class="descrip col-lg-12">
    <div class="row">
      <div class="col-lg-7 col-xs-7 borderRight">
        <h3><%= number_to_currency(contest.reward, precision: 0) %></h3>
      </div>
      <div class="entries col-lg-5 col-xs-5">
        <span><%= pluralize(contest.entries_count, "Entry") %></span>
      </div>
    </div>
  </div>
</section>